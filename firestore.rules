rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone signed in can view user profiles or list all users.
      allow read: if isSignedIn();
      // A user can only create their own profile, and the UID must match.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // A user can only update their own profile.
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Users cannot delete their profiles through the app.
      allow delete: if false;
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // Allow reading/writing a single chat doc only if the user is a participant.
      allow get, write: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      // Allow listing chats only when the query filters for chats the user is a participant in.
      // This rule validates the `where("participants", "array-contains", currentUser.uid)` query.
      allow list: if isSignedIn() && request.query.filters.participants.hasAny([request.auth.uid]);
    }

    // Rules for the 'messages' subcollection
    match /chats/{chatId}/messages/{messageId} {
      // To read or write a message, user must be a participant of the parent chat.
      // This is efficient and secure.
      allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
  }
}
