rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone can see a user's basic, non-sensitive public profile info
      allow get: if isSignedIn();
      // Only the authenticated user can see their own full profile
      allow read: if isSignedIn() && request.auth.uid == userId;
      // A user can only create their own profile, and the UID must match.
      allow create: if isSignedIn() && request.auth.uid == userId;
      // A user can only update their own profile.
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Users cannot delete their profiles through the app.
      allow delete: if false;
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // Allow read and write only if the user is a participant in the chat.
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
    }

    // Rules for the 'messages' subcollection
    match /chats/{chatId}/messages/{messageId} {
      // To read or write a message, user must be a participant of the parent chat.
      // This is efficient and secure.
      allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
  }
}
